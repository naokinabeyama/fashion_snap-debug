<div class="edit">
<h1>プロフィール編集</h1>

<%= form_with(model: @user, local: true) do |f| %>
	<!-- エラー文 -->
	<% if @user.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h3><%= I18n.t("errors.messages.not_saved",
	                 count: @user.errors.count,
	                 resource: @user.class.model_name.human.downcase) %>
	       </h3>
				<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
		</div>
	<% end %>
	<!-- エラー文 -->
	<div class="edit-text">
		<table class="edit-table">
			<tbody>
				<tr>
					<td class="field">
						<div class="edit-plofile">
							<%= f.label :プロフィール画像 %>
						</div>
						<div class="edit-image">
							<%= f.attachment_field :profile_image %>
						</div>
					</td>
				</tr>
				<tr>
					<td class="field">
						<div class="edit-plofile">
							<%= f.label :名前又はニックネーム %>
						</div>
						<div class="edit-name">
							<%= f.text_field :name %>
						</div>
					</td>
				</tr>
				<tr>
					<td class="field">
						<div class="edit-plofile">
							<%= f.label :性別 %>
						</div>
						<div class="edit-gender">
							<div class="men">
								<%= f.radio_button :gender, "MEN" %>MEN
							</div>
							<div class="women">
								<%= f.radio_button :gender, "WOMEN" %>WOMEN
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td class="field">
						<div class="edit-plofile">
							<%= f.label :自己紹介 %>
						</div>
						<div class="edit-introduction">
							<%= f.text_area :introduction, :size=>"40" %>
						</div>
					</td>
				</tr>
			</tbody>
		</table>
			<div class="edit-btn">
				<%= f.submit "変更する", class: "btn btn--edit-gray btn--cubic" %>
			</div>
	</div>
<% end %>
</div>

