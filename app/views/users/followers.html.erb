<div class="text">
<h2>フォロワー一覧</h2>
	<% @users.each do |user| %>
		<div class="user-index clearfix">
			<table>
				<div class="user-index-text">
					<tbody>
						<tr>
							<td class="user-index-image">
								<%= link_to user_path(user) do %>
									<%= attachment_image_tag(user, :profile_image, :fill, 150, 150, fallback: "no_image.jpg", class: "img-circle") %>
								<% end %>
							</td>
							<td class="user-index-user-name">
								<strong> <%= user.name %> </strong>
							</td>
							<td class="user-index-user-gender">
								<%= user.gender %>
							</td>
							<td class="user-index-user-followers">
								<%= link_to user_followings_path(user) do %>
									<div class="follow">フォロー
										<%= user.followings.count %>
									</div>
								<% end %>
								<%= link_to user_followers_path(user) do %>
									<div class="followers"> フォロワー
										<%= user.followers.count %>
									</div>
								<%  end %>
							</td>
						</tr>
					</tbody>
				</div>
			</table>
		</div>
	<% end %>
</div>